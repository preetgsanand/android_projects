<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3D5AFE" />
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:background="#3D5AFE"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:id="@+id/number"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="Hii"
        android:padding="5dp"
        android:layout_toRightOf="@+id/number"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantityheading"
        android:layout_below="@+id/number"
        android:text="Quantity"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:background="#3D5AFE"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantity"
        android:text="Hii"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/quantityheading"
        android:layout_alignBaseline="@+id/quantityheading"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rateheading"
        android:layout_below="@+id/quantityheading"
        android:text="Rate"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:background="#3D5AFE"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rate"
        android:text="Hii"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/rateheading"
        android:layout_alignBaseline="@+id/rateheading"/>

</RelativeLayout>